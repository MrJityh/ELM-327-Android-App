<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:theme="@style/AppTheme.AppBarOverlay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <RelativeLayout
        android:id="@+id/mainscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background"
        tools:context=".MainActivity" >

        <ListView
            android:id="@+id/in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_sendDB"
            android:layout_below="@+id/Status"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll" />
        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            style="?android:attr/buttonStyleSmall"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/custom_button"
            android:text="Send Command" />
        <Button
            android:id="@+id/button_retrievedb"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_above="@+id/button_send"
            android:layout_alignParentEnd="true"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/custom_button"
            android:text="Update From Database"
            android:layout_alignStart="@+id/button_send" />
        <Button
            android:id="@+id/button_sendDB"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/button_troublecodes"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/custom_button"
            android:text="Send to Database"
            android:layout_alignStart="@+id/button_retrievedb" />
        <Button
            android:id="@+id/button_saveCSV"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/edit_text_out"
            android:layout_above="@+id/button_troublecodes"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/custom_button"
            android:text="Save to CSV"
            android:layout_alignEnd="@+id/button_troublecodes" />
        <Button
            android:id="@+id/button_troublecodes"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignStart="@+id/edit_text_out"
            android:layout_above="@+id/button_send"
            android:layout_alignParentStart="true"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/custom_button"
            android:text="Fault Codes"
            android:layout_alignEnd="@+id/edit_text_out" />
        <EditText
            android:id="@+id/edit_text_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_send"
            android:layout_alignBottom="@+id/button_send"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/button_send"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textShortMessage|textMultiLine"
            android:maxLines="4"
            android:text="atrv"
            android:textColor="#FFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Connected"
            android:textColor="#EBDDE2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="10sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/Load_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Status"
            android:layout_toStartOf="@+id/Load"
            android:gravity="start"
            android:text="Ld: "
            android:textColor="#aaa"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Status"
            android:layout_toStartOf="@+id/Temp_text"
            android:gravity="center"
            android:text="0 %"
            android:textColor="#99FFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Status"
            android:layout_alignEnd="@+id/Center_text"
            android:gravity="start"
            android:text="  Tmp:  "
            android:textColor="#aaa"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Status"
            android:layout_centerHorizontal="true"
            android:gravity="start"
            android:text=""
            android:textColor="#aaa"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Center_text"
            android:layout_below="@+id/Status"
            android:gravity="center"
            android:text="0 CÂ°"
            android:textColor="#99FFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Volt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Status"
            android:layout_toEndOf="@+id/Temp"
            android:gravity="start"
            android:text="  Volt: "
            android:textColor="#aaa"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Volt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Status"
            android:layout_toEndOf="@+id/Volt_text"
            android:gravity="center"
            android:text="0 V"
            android:textColor="#99FFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Airtemp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Fuel"
            android:gravity="start"
            android:text="Air Temp:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Airtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/Airtemp_text"
            android:layout_alignBaseline="@id/Airtemp_text"
            android:gravity="center"
            android:text="0 CÂ°"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Maf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Airtemp"
            android:gravity="start"
            android:text="Maf Flow:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/Maf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/Maf_text"
            android:layout_alignBaseline="@id/Maf_text"
            android:gravity="end"
            android:text="0 g/s"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Maf"
            android:gravity="start"
            android:text="Engine Speed:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/Speed_text"
            android:layout_alignBaseline="@id/Speed_text"
            android:gravity="end"
            android:text="0 rpm"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/VehicleSpeed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Speed"
            android:gravity="start"
            android:text="Vehicle Speed:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/VehicleSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/VehicleSpeed_text"
            android:layout_alignBaseline="@id/VehicleSpeed_text"
            android:gravity="end"
            android:text="0 km/h"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/IntakeAirtemp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/VehicleSpeed"
            android:gravity="start"
            android:text="Intake Air Temp:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/IntakeAirtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/IntakeAirtemp_text"
            android:layout_alignBaseline="@id/IntakeAirtemp_text"
            android:gravity="end"
            android:text="0 CÂ°"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/MafAirFlow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/IntakeAirtemp"
            android:gravity="start"
            android:text="Maf Air Flow:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/MafAirFlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/MafAirFlow_text"
            android:layout_alignBaseline="@id/MafAirFlow_text"
            android:gravity="end"
            android:text="0 g/s"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ThrottlePosition_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/MafAirFlow_text"
            android:gravity="start"
            android:text="Throttle Position:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/ThrottlePosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ThrottlePosition_text"
            android:layout_alignBaseline="@id/ThrottlePosition_text"
            android:gravity="end"
            android:text="0 %"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RunTimeEngStart_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ThrottlePosition"
            android:gravity="start"
            android:text="Run time since engine start:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/RunTimeEngStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/RunTimeEngStart_text"
            android:layout_alignBaseline="@id/RunTimeEngStart_text"
            android:gravity="end"
            android:text="0 s"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/FuelRailPressure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RunTimeEngStart"
            android:gravity="start"
            android:text="Fuel Rail Pressure:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/FuelRailPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/FuelRailPressure_text"
            android:layout_alignBaseline="@id/FuelRailPressure_text"
            android:gravity="end"
            android:text="0 kPa"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DistanceTraveled_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FuelRailPressure"
            android:gravity="start"
            android:text="Distance Traveled:"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/DistanceTraveled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/DistanceTraveled_text"
            android:layout_alignBaseline="@id/DistanceTraveled_text"
            android:gravity="end"
            android:text="0 km"
            android:textColor="#99FFFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/Temp_text"
            android:text="0 - 0 l/h"
            android:textColor="#FFFF00"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFF00"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />


    </RelativeLayout>

</com.google.android.material.appbar.AppBarLayout>